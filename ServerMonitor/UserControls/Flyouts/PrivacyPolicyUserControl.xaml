<UserControl
    x:Class="ServerMonitor.UserControls.Flyouts.PrivacyPolicyUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ServerMonitor.UserControls.Flyouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource BasicTextStyle}" Foreground="Black">The servers stored in this application are only stored locally on your computer. No personal information is shared or stored. When checking if a server is online, a datarequest is made to the specified server from your local pc using your internet connection and IP address.</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>

